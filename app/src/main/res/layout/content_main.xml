<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/bg4"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.acer.weather_forecast.ui.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ScrollView
        android:id="@+id/scroll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/today_date_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="2015年12月30日"
                        android:gravity="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="24sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/today_now_temperature"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:text="13℃"
                        android:textSize="40sp"
                        android:gravity="center"
                        android:textColor="@color/colorWhite"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/today_today_temperature"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="8℃ ~ 15℃"
                            android:gravity="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"/>
                        <TextView
                            android:id="@+id/today_today_windlevel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="东北风：2级"
                            android:gravity="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/today_today_airhumidity"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="空气湿度：68%"
                            android:gravity="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"/>
                        <TextView
                            android:id="@+id/today_today_updatetime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="最新更新时间：00:52"
                            android:gravity="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!-- 预报模块 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预报"
                    android:padding="10dp"
                    android:textSize="30sp"
                    android:textColor="@color/colorWhite"/>
                <com.example.acer.weather_forecast.view.MyListview
                    android:id="@+id/forecast_lv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:padding="5dp">
                <lecho.lib.hellocharts.view.LineChartView
                    android:id="@+id/line_chart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/forecast_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            </LinearLayout>
            <!-- 建议模块  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="建议"
                    android:padding="10dp"
                    android:textSize="30sp"
                    android:textColor="@color/colorWhite"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorWhite"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/home_index_icon01"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="穿衣指数"
                            android:textSize="20sp"
                            android:textColor="@color/colorWhite"
                            android:layout_alignParentRight="true"/>
                        <TextView
                            android:id="@+id/suggest_clother_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="较冷"
                            android:textSize="16sp"
                            android:textColor="@color/colorWhite"
                            android:padding="10dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorWhite"/>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/home_index_icon02"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="洗车指数"
                            android:textSize="20sp"
                            android:textColor="@color/colorWhite"
                            android:layout_alignParentRight="true"/>
                        <TextView
                            android:id="@+id/suggest_cleancar_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="较冷"
                            android:textSize="16sp"
                            android:textColor="@color/colorWhite"
                            android:padding="10dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_margin="5dp"
                    android:background="@color/colorWhite"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/home_index_icon03"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="紫外线指数"
                            android:textSize="20sp"
                            android:textColor="@color/colorWhite"
                            android:layout_alignParentRight="true"/>
                        <TextView
                            android:id="@+id/suggest_ziwaixian_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="较冷"
                            android:textSize="16sp"
                            android:textColor="@color/colorWhite"
                            android:padding="10dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorWhite"/>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/home_index_icon04"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="旅游指数"
                            android:textSize="20sp"
                            android:textColor="@color/colorWhite"
                            android:layout_alignParentRight="true"/>
                        <TextView
                            android:id="@+id/suggest_travel_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="较冷"
                            android:textSize="16sp"
                            android:textColor="@color/colorWhite"
                            android:padding="10dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorWhite"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/home_index_icon05"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="舒适指数"
                        android:textSize="20sp"
                        android:textColor="@color/colorWhite"
                        android:layout_alignParentRight="true"/>
                    <TextView
                        android:id="@+id/suggest_comfortable_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="较冷"
                        android:textSize="16sp"
                        android:textColor="@color/colorWhite"
                        android:padding="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/home_index_icon06"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="晨练指数"
                        android:textSize="20sp"
                        android:textColor="@color/colorWhite"
                        android:layout_alignParentRight="true"/>
                    <TextView
                        android:id="@+id/suggest_monpractice_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="较冷"
                        android:textSize="16sp"
                        android:textColor="@color/colorWhite"
                        android:padding="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorWhite"/>


        </LinearLayout>


    </ScrollView>
</RelativeLayout>
